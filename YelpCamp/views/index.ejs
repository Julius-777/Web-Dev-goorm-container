<% include partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Campgrounds page</h1>
			<p>
				View our campgrounds
			</p>
			<p>
				<a class="btn btn-primary btn-large" href="/campgrounds/new"> Add New Campground </a>
			</p>
		</div>
	</header>
	<div class="row d-flex flex-wrap">
		<% campsDatabase.forEach(function(campground) { %> 
			<div class="col-md-3 col-sm-6">
				<div class="img-thumbnail">
					<img src="<%=campground.image%>" class="img-fluid rounded">
					<figcaption class="img-caption text-center"> <%= campground.name %> </figcaption>
					<p class="text-center">
						<a href='/campgrounds/<%= campground._id %>' class="btn btn-secondary btn-md">More Info</a>
					</p>
				</div>
			</div>
		<% }); %> 
	</div>
</div>
<% include partials/footer %>